@{
    ViewBag.Title = "Photos";
    Layout = "~/Areas/Mobile/Views/Shared/_mobileLayout.cshtml";
}
@model RiftData.Presentation.ViewModels.Mobile.SpeciesPhotosPageViewModel

@section PageContent{
<div id ="Gallery">
    @foreach (var photo in Model.Photos)
    {
       <div class="thumbnailCell">
            <a href="@photo.MediumUrl"><img src="@photo.SquareThumbnail"  rel="external" alt=@photo.Caption/></a>
       </div>
    }
</div>
}

@section Scripts{
    <script src="@Url.Content("~/Scripts/Photoswipe/lib/klass.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Photoswipe/code.photoswipe.jquery-2.1.3.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Mobile/Mobile.js")" type="text/javascript"></script>
}