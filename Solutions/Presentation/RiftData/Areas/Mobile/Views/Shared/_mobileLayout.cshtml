@{
    Layout = null;
}

@model RiftData.Presentation.ViewModels.Mobile.Shared.ViewModelBase
<html>
    <head>
        <link rel="stylesheet" href="http://code.jquery.com/mobile/1.0b3/jquery.mobile-1.0b3.min.css" />
        <script src="http://code.jquery.com/jquery-1.6.2.min.js"></script>
        <script src="http://code.jquery.com/mobile/1.0b3/jquery.mobile-1.0b3.min.js"></script>
        <meta name="keywords" content="@this.Model.MetaData.MetaKeywords" />
        <meta name="descripton" content="@this.Model.MetaData.MetaDescription" />
        <meta name="title" content="@this.Model.MetaData.MetaTitle" />
    </head>
    <body>
        <div data-role="page">
            <div data-role="header">
                <h1>@Model.Header</h1>
            </div>
            <div data-role="content">
                @RenderSection("PageContent")
            </div>
        </div>
    </body>
</html>