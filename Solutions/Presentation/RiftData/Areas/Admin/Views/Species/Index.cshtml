@model RiftData.Presentation.ViewModels.Admin.SpeciesPageViewModel
@using Telerik.Web.Mvc.UI
@{
    ViewBag.Title = "Species";
    Layout = "../Shared/_Layout.cshtml";
}

@section Navigation
{
    @Html.Partial("NavigationPartial", Model.SelectedView)
}

<div id="body"> 
    <div class="portlet">
        <div class="portlet-header">
            <ul id ="PageHeaderList">
                <li class="left headerButton">                    
                    <a href="@Url.Action("Create", "Species")">
                        <button>
                            <span>Add Species</span>
                        </button>
                    </a>
                </li>
                <li class="right headerButton">
                    <a id="QuickSearchEditButton" style="display:none;margin-left:5px;">
                        <button>
                            <span>Edit</span>
                        </button>
                    </a>
                </li>
                <li class="right" id="LocaleIndexPageSearchBox">
                    @(Html.Telerik().ComboBox().Name("Name")
                                .BindTo(new SelectList(Model.Species, "Id", "Name"))
                                .ClientEvents(c => c.OnChange("SpeciesQuickSearchSelected")))
                </li>
                <li class="right" id="LocaleIndexPageQuickSearchText">Quick Search:</li>
                <li class="clear"></li>
            </ul>
        </div>
        <div class="portlet-content">
            <table>
                <thead>
                    <tr>
                        <th>
                            Species
                        </th>
                        <th>
                            Genus
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.Species)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.GenusName
                        </td>
                        <td>
                            <div class="buttonRow">
                                <a href="@Url.Action("Update", "Species", new { id= item.Id })" class="linkButton">
                                    <button>
                                        <span>Edit</span>
                                    </button>
                                </a>
                                <a href="@Url.Action("Delete", "Species", new { id= item.Id })" class="linkButton">
                                    <button>
                                        <span>Delete</span>
                                    </button>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

<input type="hidden" id="EditUrl" value="@Url.Action("Update", "Species", null)" />

@section Scripts
{
    <script src="@Url.Content("~/Scripts/Admin/SpeciesIndex.js")" type="text/javascript"></script>
}