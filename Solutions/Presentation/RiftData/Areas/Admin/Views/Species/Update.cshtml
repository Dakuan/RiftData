@model RiftData.Presentation.ViewModels.Admin.SpeciesEditPageViewModel
@using Telerik.Web.Mvc.UI
@{
    ViewBag.Title = Model.Mode;
    Layout = "../Shared/_Layout.cshtml";
}
@section Navigation
{
    @Html.Partial("NavigationPartial", Model.SelectedView)
}
<div id="body">
    <div class="portlet">
        <div class="portlet-header">
            <ul id ="PageHeaderList">
                <li class="left">
                    <h4>@Model.Mode @Model.Name</h4>
                </li>
                <li class="right headerButton">
                    <a href="@Url.Action("Index")">
                        <button class="btn-sec">
                            <span>Back to list</span>
                        </button>
                    </a>
                </li>
            </ul>
        </div>
        <div class="portlet-content">
            @using (Html.BeginForm(@Model.Mode, "Species", FormMethod.Post, new { @class = "form label-inline" }))
            {
                <div class="field">
                    <label>Name</label>
                    @Html.TextBoxFor(m => m.Name, new { @class = "validate[required]" })
                </div>
                <div class="field">
                    <label>Genus</label>
                    @Html.Telerik().DropDownList().BindTo(Model.Genus).Name("Genus")
                </div>
                <div class="field">
                    <label>Described</label>
                    @Html.CheckBoxFor(m => m.Described)
                </div>
                <div>
                    <label>Description</label>
                    @Html.TextAreaFor(m => m.Description, new { columns = "10" })
                </div>
                <div>
                    <label>Temperament</label>
                    @Html.Telerik().DropDownList().BindTo(Model.Temperament).Name("Temperament")
                </div>
                <div>
                    <label>Size</label>
                    @(Html.Telerik().RangeSlider<int>().Min(0).Max(50).Values(Model.MinSize,Model.MaxSize).Name("Size"))
                </div>
                <div class="buttonrow">
                    <button type="submit">
                        <span>Save</span>
                    </button>
                </div>
            }
        </div>
    </div>
</div>
<input type="hidden" value="@Url.Action("UpdateSuccess", "AjaxMessaging", new { subject = "Species", okAction = "Index", okController = "Species" })" id="SuccessUrl" />
<input type="hidden" value="@Url.Action("UpdateFailure", "AjaxMessaging", new { subject = "Species", okAction = "Index", okController = "Species" })" id="FailureUrl" />

@Html.Partial("MessageBox")

@section Css
{
    <link href="@Url.Content("~/Content/Admin/CSS/validationEngine.jquery.css")" rel="stylesheet" type="text/css" />
}

@section Scripts
{
    <script src="@Url.Content("~/Scripts/tiny_mce/tiny_mce.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Admin/LoadTextEditor.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Admin/SpeciesUpdate.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Admin/jquery.validationEngine-en.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Admin/jquery.validationEngine.js")" type="text/javascript"></script>
}