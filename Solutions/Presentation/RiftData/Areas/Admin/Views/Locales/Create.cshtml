@model RiftData.Presentation.ViewModels.Admin.NavigationPartialViewModel
@{
    ViewBag.Title = "Create";
    Layout = "../Shared/_Layout.cshtml";
}

@using Telerik.Web.Mvc.UI

@section Css
{
    <link href="@Url.Content("~/Content/Admin/CSS/validationEngine.jquery.css")" rel="stylesheet" type="text/css" />
}
@section Navigation
{
    @Html.Partial("NavigationPartial", Model.SelectedView)
}
<div id="body">
    <div class="portlet">
        <div class="portlet-header">
            <ul id ="PageHeaderList">
                <li class="left">
                    <h4>Create Locale</h4>
                </li>
                <li class="right headerButton">
                    <a href="@Url.Action("Index")">
                        <button class="btn-sec">
                            <span>Back to list</span>
                        </button>
                    </a>
                </li>
            </ul>
        </div>
        <div class="portlet-content">
            <div class="left">
                @using (Html.BeginForm("Create", "Locales", FormMethod.Post, new { @class = "form label-inline" }))
                {
                <div class="field">
                    <label>Name</label>
                    @Html.TextBox("Name", null, new { @class = "medium, validate[required,custom[onlyLetterSp]]" })
                </div>
                <div class="field">
                    <label>Latitude</label>
                    @Html.Telerik().NumericTextBox().Name("Latitude").DecimalDigits(10).ClientEvents(c => c.OnChange("OnLatChange")).IncrementStep(0.005).Value(-11.80)
                </div>
                <div class="field">
                    <label>Longitude</label>
                    @Html.Telerik().NumericTextBox().Name("Longitude").DecimalDigits(10).ClientEvents(c => c.OnChange("OnLongChange")).IncrementStep(0.005).Value(34.58)
                </div>
                <div class="field">
                    <label>Zoom Level</label>
                    @Html.Telerik().IntegerTextBox().Name("ZoomLevel").ClientEvents(c => c.OnChange("OnZoomChange")).MaxValue(4).MinValue(1).Value(1)
                </div>
                <div class="buttonrow">
                <button type="submit">
                    <span>Save</span>
                </button>
                </div>
                }
            </div>
            <div id="LocaleMap"></div>
            <div class="clear"></div>
        </div>
    </div>
</div>
<input type="hidden" value="@Url.Action("UpdateSuccess", "AjaxMessaging", new { subject = "Locale", okAction = "Index", okController = "Locales" })" id="SuccessUrl" />
<input type="hidden" value="@Url.Action("UpdateFailure", "AjaxMessaging", new { subject = "Locale", okAction = "Index", okController = "Locales" })" id="FailureUrl" />
@Html.Partial("MessageBox")
@section Scripts
{
    <script type="text/javascript" src="http://ecn.dev.virtualearth.net/mapcontrol/mapcontrol.ashx?v=7.0"></script>
    <script src="@Url.Content("~/Scripts/Admin/jquery.validationEngine-en.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Admin/jquery.validationEngine.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Admin/LocaleCreate.js")" type="text/javascript"></script>
}