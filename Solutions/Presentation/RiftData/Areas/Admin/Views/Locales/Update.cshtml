@model RiftData.Presentation.ViewModels.Admin.LocaleUpdatePageViewModel         
@using Telerik.Web.Mvc.UI
@{
    ViewBag.Title = "Update";
    Layout = "../Shared/_Layout.cshtml";
}
@section Css
{
    <link href="@Url.Content("~/Content/Admin/CSS/validationEngine.jquery.css")" rel="stylesheet" type="text/css" />
}
@section Navigation
{
    @Html.Partial("NavigationPartial", Model.SelectedView)
}
<div id="body">
    <div class="portlet">
        <div class="portlet-header">
            <ul id ="PageHeaderList">
                <li class="left">
                    <h4>Edit @Model.Name</h4>
                </li>
                <li class="right headerButton">
                    <a href="@Url.Action("Index")">
                        <button class="btn-sec">
                            <span>Back to list</span>
                        </button>
                    </a>
                </li>
            </ul>
        </div>
        <div class="portlet-content">
            <div class="left">
                @using (Html.BeginForm("Update", "Locales", FormMethod.Post, new { @class = "form label-inline" }))
                {
                <div class="field">
                    <label>Name</label>
                    @Html.TextBoxFor(m => m.Name, new { @class = "medium, validate[required,custom[onlyLetterSp]]" })
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
                <div class="field">
                    <label>Latitude</label>
                    @Html.Telerik().NumericTextBoxFor(m => m.Latitude).DecimalDigits(10).ClientEvents(c => c.OnChange("OnLatChange")).IncrementStep(0.005)

                    @Html.ValidationMessageFor(m => m.Latitude)
                </div>
                <div class="field">
                    <label>Longitude</label>
                    @Html.Telerik().NumericTextBoxFor(m => m.Longitude).DecimalDigits(10).ClientEvents(c => c.OnChange("OnLongChange")).IncrementStep(0.005)
                    @Html.ValidationMessageFor(m => m.Longitude)
                </div>
                <div class="field">
                    <label>Zoom Level</label>
                    @Html.Telerik().IntegerTextBoxFor(m => m.ZoomLevel).ClientEvents(c => c.OnChange("OnZoomChange")).MaxValue(4).MinValue(1)
                </div>
                <div class="buttonrow">
                <button type="submit">
                    <span>Save</span>
                </button>
                </div>
                }
            </div>
            <div id="LocaleMap"></div>
            <div class="clear"></div>
        </div>
    </div>
</div>
<input type="hidden" value="@Url.Action("UpdateSuccess", "AjaxMessaging", new { subject = "Locale", okAction = "Index", okController = "Locales" })" id="SuccessUrl" />
<input type="hidden" value="@Url.Action("UpdateFailure", "AjaxMessaging", new { subject = "Locale", okAction = "Index", okController = "Locales" })" id="FailureUrl" />
<input type="hidden" value="@Model.ZoomLevel" id="CurrentZoomLevel" />
@Html.Partial("MessageBox")
@section Scripts
{
    <script type="text/javascript" src="http://ecn.dev.virtualearth.net/mapcontrol/mapcontrol.ashx?v=7.0"></script>
    <script src="@Url.Content("~/Scripts/Admin/jquery.validationEngine-en.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Admin/jquery.validationEngine.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Admin/LocaleUpdate.js")" type="text/javascript"></script>
}