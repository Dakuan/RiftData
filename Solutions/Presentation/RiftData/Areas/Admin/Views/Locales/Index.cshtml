@model RiftData.Presentation.ViewModels.Admin.LocalePageViewModel
@using Telerik.Web.Mvc.UI 
@{
    ViewBag.Title = "Locales";
    Layout = "../Shared/_Layout.cshtml";
}
@section Navigation
{
    @Html.Partial("NavigationPartial", Model.SelectedView)
}

<div id="body"> 
    <div class="portlet">
        <div class="portlet-header">
            <ul id ="PageHeaderList">
                <li class="left"><h4>Locale</h4></li>
                <li class="right headerButton">
                    <a id="QuickSearchEditButton" style="display:none;margin-left:5px;">
                        <button>
                            <span>Edit</span>
                        </button>
                    </a>
                </li>
                <li class="right" id="LocaleIndexPageSearchBox">
                    @(Html.Telerik().ComboBox().Name("Name")
                                .BindTo(Model.LocalesSelectList)
                                .ClientEvents(c => c.OnChange("LocaleQuickSearchSelected")))
                </li>
                <li class="right" id="LocaleIndexPageQuickSearchText">Quick Search:</li>
                <li class="clear"></li>
            </ul>
        </div>
        <div class="portlet-content">
            <table>
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Latitude
                        </th>
                        <th>
                            Longitude
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Locales)
                    {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Latitude
                        </td>
                        <td>
                            @item.Longitude
                        </td>
                        <td>
                            <a href="@Url.Action("Update", "Locales", new { id = item.Id })">
                                <button>
                                    <span>Edit</span>
                                </button>
                            </a>
                            <a href="@Url.Action("Delete", "Locales", new { id = item.Id })">
                                <button>
                                    <span>Delete</span>
                                </button>
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<input type="hidden" id="EditUrl" value="@Url.Action("Update", "Locales", null)" />

@section Scripts
{
    <script src="@Url.Content("~/Scripts/Admin/LocaleIndex.js")" type="text/javascript"></script>
}