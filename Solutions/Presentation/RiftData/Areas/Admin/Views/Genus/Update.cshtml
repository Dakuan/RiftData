@using RiftData.Presentation.ViewModels.Admin
@model GenusUpdatePageViewModel
@{
    this.ViewBag.Title = "Update";
    this.Layout = "../Shared/_Layout.cshtml";

}
@this.Html.Partial("NavigationPartial", this.Model.SelectedView)
<div id="body">
    <div class="portlet">
        <div class="portlet-header">
            <ul id ="PageHeaderList">
                <li class="left">
                    <h4>@this.Model.Mode @this.Model.Name</h4>
                </li>
                <li class="right headerButton">
                    <a href="@this.Url.Action("Index")">
                        <button class="btn-sec">
                            <span>Back to list</span>
                        </button>
                    </a>
                </li>
            </ul>
        </div>
        <div class="portlet-content">
            @using (this.Html.BeginForm(this.Model.Mode, "Genus", FormMethod.Post, new { @class = "form label-inline" }))
            {
                <div class="field">
                    <label>Name</label>
                    @this.Html.TextBoxFor(m => m.Name, new { @class = "validate[required]" })
                </div>
                <div class="buttonrow">
                    <button type="submit">
                        <span>Save</span>
                    </button>
                </div>
            }
        </div>
    </div>
</div>
<input type="hidden" value="@this.Url.Action("UpdateSuccess", "AjaxMessaging", new { subject = "Genus", okAction = "Index", okController = "Genus" })" id="SuccessUrl" />
<input type="hidden" value="@this.Url.Action("UpdateFailure", "AjaxMessaging", new { subject = "Genus", okAction = "Index", okController = "Genus" })" id="FailureUrl" />
@this.Html.Partial("MessageBox")
@section Css
{
    <link href="../../Content/CSS/validationEngine.jquery.css" rel="stylesheet" type="text/css" />
}
@section Scripts
{
    <script src="../../Scripts/jquery.validationEngine-en.js" type="text/javascript"> </script>
    <script src="../../Scripts/jquery.validationEngine.js" type="text/javascript"> </script>
    <script src="../../Scripts/GenusUpdate.js" type="text/javascript"> </script>
}