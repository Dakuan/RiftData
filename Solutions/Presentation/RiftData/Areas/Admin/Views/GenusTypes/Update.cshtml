@model RiftData.Presentation.ViewModels.Admin.GenusTypeUpdatePageViewModel
@using Telerik.Web.Mvc.UI
@{
    ViewBag.Title = "Update";
    Layout = "../Shared/_Layout.cshtml";
}
@section Navigation
{
    @Html.Partial("NavigationPartial", Model.SelectedView)
}
@section Scripts
{
    <script src="@Url.Content("~/Scripts/Admin/GenusTypeUpdate.js")" type="text/javascript"></script>
}
<div id="body">
    <div class="portlet">
        <div class="portlet-header">
            <ul id ="PageHeaderList">
                <li class="left">
                    <h4>Update @Model.GenusType.Name</h4>
                </li>
                <li class="right headerButton">
                    <a href="@Url.Action("Index")">
                        <button class="btn-sec">
                            <span>Back to list</span>
                        </button>
                    </a>
                </li>
            </ul>
        </div>
        <div class="portlet-content">
            @using (Html.BeginForm("Update", "GenusTypes", FormMethod.Post, new { @class = "form label-inline" }))
            {
                <div class="field">
                    <label>Name</label>
                    @Html.TextBox("Name", Model.GenusType.Name, new { @class = "validate[required]" })
                </div>
                <div class="field">
                    <label>Lake</label>
                    @Html.Telerik().DropDownList().BindTo(Model.Lakes).Name("Lake")
                </div>
                <div class="buttonrow">
                    <button type="submit">
                        <span>Save</span>
                    </button>
                </div>
            }
        </div>
    </div>
</div>
<input type="hidden" value="@Url.Action("UpdateSuccess", "AjaxMessaging", new { subject = "Genus Type", okAction = "Index", okController = "GenusTypes" })" id="SuccessUrl" />
<input type="hidden" value="@Url.Action("UpdateFailure", "AjaxMessaging", new { subject = "Genus Type", okAction = "Index", okController = "GenusTypes" })" id="FailureUrl" />
@Html.Partial("MessageBox")