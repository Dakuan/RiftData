@using RiftData.Presentation
@using Telerik.Web.Mvc.UI
@using RiftData.Presentation.ViewModels.Admin.GenusType
@model GenusTypeUpdatePageViewModel
@{
    this.ViewBag.Title = "Update";
    this.Layout = "../Shared/_Layout.cshtml";

}
@section Navigation {
@this.Html.Partial("NavigationPartial", this.Model.SelectedView)
}
@section Scripts
{
    <script src="@this.Url.Content("~/Scripts/Admin/GenusTypeUpdate.js")" type="text/javascript"> </script>
}
<div id="body">
    <div class="portlet">
        <div class="portlet-header">
            <ul id ="PageHeaderList">
                <li class="left">
                    <h4>Update @this.Model.GenusType.Name</h4>
                </li>
                <li class="right headerButton">
                    <a href="@this.Url.Action("Index")">
                        <button class="btn-sec">
                            <span>Back to list</span>
                        </button>
                    </a>
                </li>
            </ul>
        </div>
        <div class="portlet-content">
            @using (this.Html.BeginForm("Update", "GenusTypes", FormMethod.Post, new { @class = "form label-inline" }))
            {
                <div class="field">
                    <label>Name</label>
                    @this.Html.TextBox("Name", this.Model.GenusType.Name, new { @class = "validate[required]" })
                </div>
                <div class="field">
                    <label>Lake</label>
                    @this.Html.Telerik().DropDownList().BindTo(this.Model.Lakes).Name("Lake")
                </div>
                <div class="buttonrow">
                    <button type="submit">
                        <span>Save</span>
                    </button>
                </div>
            }
        </div>
    </div>
</div>
<input type="hidden" value="@this.Url.Action("UpdateSuccess", "AjaxMessaging", new { subject = "Genus Type", okAction = "Index", okController = "GenusTypes" })" id="SuccessUrl" />
<input type="hidden" value="@this.Url.Action("UpdateFailure", "AjaxMessaging", new { subject = "Genus Type", okAction = "Index", okController = "GenusTypes" })" id="FailureUrl" />
@this.Html.Partial("MessageBox")
